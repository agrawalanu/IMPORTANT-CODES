#include<bits/stdc++.h>
using namespace std;
 
int main()
{
	int n, l;
	cin >> n >> l;
	
	int a[n];
	for(int i =0; i<n; i++)
		cin >> a[i];
		
	sort(a, a+n);
	int b[1005] = {0};
	
	for(int i =0; i<n-1; i++)
	{
		b[i] = a[i+1]-a[i];
	}
	
	double d = *max_element(b,b+1005);
	 d = d/(double)2;
	d = max(d, (double)a[0]);
	d = max(d, (double)(l-a[n-1]));
	cout << setprecision(12);
	cout  << fixed << d;
}
