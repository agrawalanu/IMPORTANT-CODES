#include<bits/stdc++.h>

using namespace std;

int main()
{
	int n, m;
	cin >>n >> m;
	
	int a[n];
	for(int i =0; i<n; i++)
		cin >> a[i];
		
	queue<pair<int, int> > q;
	
	for(int i =0; i<n; i++)
	{
		q.push({a[i], i+1});
	}
	while(q.size() > 1)
	{

		if(q.front().first <= m)
			q.pop();
		else
		{
			q.front().first-= m;
			q.push({q.front().first, q.front().second});
			q.pop();
		}
			
	}	
	cout<< q.front().second;
}
